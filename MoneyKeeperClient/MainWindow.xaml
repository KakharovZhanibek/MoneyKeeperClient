<Window x:Class="MoneyKeeperClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyKeeperClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="tbxLogin" Width="110" Margin="20"> </TextBox>
        <PasswordBox x:Name="pbxPassword" Width="110"></PasswordBox>
        <Button Margin="20" x:Name="SignIn_Btn" Click="SignIn_Btn_Click" Content="Login"></Button>
    </StackPanel>
</Window>
